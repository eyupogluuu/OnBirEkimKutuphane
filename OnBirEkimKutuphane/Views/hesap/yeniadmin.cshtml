
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Admin Kayıt Paneli</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-31/css/roboto-font.css">
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-31/fonts/font-awesome-5/css/fontawesome-all.min.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-31/css/style.css" />
</head>
<body class="form-v5">
    <div class="page-content">
        <div class="form-v5-content">
            <form class="form-detail" method="post">
                <h2>Kullanıcı Kayıt Formu</h2>
                <div class="form-row">
                    <label for="full-name">Ad Soyad:</label>
                    <input type="text" name="adSoyad" id="full-name" class="input-text" placeholder="AdSoyad.." required>
                    @*@Html.TextBoxFor(x => x.kullaniciAdi, new { @class = "form-control" })*@
                    <i class="fas fa-user"></i>
                </div>
                <div class="form-row">
                    <label for="your-email">Email:</label>
                    @*@Html.TextBoxFor(x => x.email, new { @class = "form-control" })*@
                    <input type="text" name="email" id="your-email" class="input-text" placeholder="Your Email" @*required pattern="[^@]+@[^@]+.[a-zA-Z]{2,6}"*@>
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="form-row">
                    <label for="password">Şifre:</label>
                    @*@Html.TextBoxFor(x => x.email, new { @class = "form-control" })*@
                    <input type="password" name="sifre" id="password" class="input-text" placeholder="Your Password" required>
                    <i class="fas fa-lock"></i>
                </div>
                <div class="form-row-last">
                    <input type="submit" @*name="register"*@ class="register" value="Kaydol">
                </div>
            </form>
        </div>
    </div>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
